<div class='container'>
  <h1 class='text-center'>Posts</h1>
  <table class='table table-striped'>
    <thead>
      <tr>
        <th>Body</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.content %></td>
          <td><%= link_to "voir post",post %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= link_to 'New post', new_post_path, class: 'btn btn-primary' %>
