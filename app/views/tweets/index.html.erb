<div class='container mt-4'>
      <h1 class='mb-4'>Tweets</h1>
      <div class='row'>
        <% @tweets.each do |tweet| %>
          <div class='col-md-4 mb-3'>
            <div class='card'>
              <div class='card-body'>
                <h5 class='card-title'>User <%= tweet.user_id %></h5>
                <p class='card-text'><%= tweet.content %></p>
                <small class='text-muted'><%= tweet.created_at.strftime('%B %d, %Y') %></small>
                <small class='text-muted'><%= link_to "voir tweet",tweet %></small>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      </div>
<%=link_to "nouveau tweet",new_tweet_path%>
